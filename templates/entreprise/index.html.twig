{% extends 'layout.html.twig' %}
{% block title %}Emploi | Entreprise{% endblock %}
{% block body %}
    <section class="section-hero overlay inner-page bg-image" style="background-image: url('{{ ('templates/images/hero_1.jpg') }}');" id="home-section">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1 class="text-white font-weight-bold">Profile</h1>
                    <div class="custom-breadcrumbs">
                        <a href="#">Home</a> <span class="mx-2 slash">/</span>
                        <span class="text-white"><strong>Profile</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="site-section" id="next-section">
        <div class="container">

            <div class="row align-items-center mb-5">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2>Modifier Profil</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-6">
                            <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-open_in_new mr-2"></span>Preview</a>
                        </div>
                        <div class="col-6">
                            <a href="#" class="btn btn-block btn-primary btn-md">Enrégistrer</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-lg-12">
                    <form class="p-4 p-md-5 border rounded" action="{{ path('app_entreprise_edit') }}" method="post" enctype="multipart/form-data">
                        <h3 class="text-black mb-5 border-bottom pb-2">Mon Profil</h3>
                        <div class="form-group">
                            <img src="{{ asset('templates/images/nologo.png') }}" alt="Image" class="imageD" width="150px" height="150px"><br>
                        </div>
                        <div class="form-group">
                            <label class="btn btn-primary btn-md btn-file">
                                Choisir Logo
                                <input type="file" class="logo" id="logo" name="logo" value="{{ csrf_token('upload') }}" accept="image/png, image/jpeg">
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="exemple@domaine.com">
                        </div>
                        <div class="form-group">
                            <label for="denomination">Dénomination</label>
                            <input type="text" class="form-control" id="denomination" name="denomination" placeholder="Nom de l'Entreprise">
                        </div>
                        <div class="form-group">
                            <label for="telephone">Téléphone</label>
                            <input type="text" class="form-control" id="telephone" name="telephone" placeholder="77 888 88 88">
                        </div>
                        <div class="form-group">
                            <label for="adresse">Adresse</label>
                            <input type="text" class="form-control" id="adresse" name="adresse" placeholder="Rue Carnot..., Dakar">
                        </div>

                        <div class="form-group">
                            <label for="secteurs">Secteur D'Activité</label>
                            <select class="selectpicker border rounded" multiple="multiple" id="secteurs" name="secteurs" data-style="btn-black" data-width="100%" data-live-search="true" title="Selectionner Secteur d'Activité">
                                <option>Anywhere</option>
                                <option>San Francisco</option>
                                <option>Palo Alto</option>
                                <option>New York</option>
                                <option>Manhattan</option>
                                <option>Ontario</option>
                                <option>Toronto</option>
                                <option>Kansas</option>
                                <option>Mountain View</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="description">Description</label>
                            <div class="editor" id="editor-1">
                                <p>Description de l'entreprise!</p>
                            </div>
                        </div>
                        <input type="hidden" name="description" id="description">
                    </form>
                </div>

            </div>
            <div class="row align-items-center mb-5">

                <div class="col-lg-4 ml-auto">
                    <div class="row">
                        <div class="col-6">
                            <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-open_in_new mr-2"></span>Preview</a>
                        </div>
                        <div class="col-6">
                            <a href="#" class="btn btn-block btn-primary btn-md" id="btnSave">Save Job</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="application/javascript">
        $(document).ready(function ()
        {
            $('.editor').height(300).css({
                cursor: "auto",
                borderColor: "auto"
            });
            $('#btnSave').click(function (){
                var html = new Quill('.editor').root.innerHTML;
                $('#description').val( html )
               alert($("#description").val());
            });
            $(".logo").change(function(e) {
                for (var i = 0; i < e.originalEvent.srcElement.files.length; i++) {

                    var file = e.originalEvent.srcElement.files[i];

                    //var img = document.createElement("img");
                    var reader = new FileReader();
                    reader.onloadend = function() {
                        //img.src = reader.result;
                        $('.imageD').attr("src", reader.result);
                    }
                    reader.readAsDataURL(file);
                    //$(".logo").after(img);
                }
            });
        });
    </script>
{% endblock %}
