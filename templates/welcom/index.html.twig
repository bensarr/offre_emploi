    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="application/javascript">
        $(document).ready(function (){
            $('#nouveauoffre').click(function () {
                $('#niveau_etude option').prop("selected",false);
                $('#annee_experience option').prop("selected",false);
                $('#domaines option').prop("selected",false);
            })
            $('#editOffre').click(function () {
                var data = $(this).attr("data-value").split('-');
                $('#id').val(data[0]);
                $('#titre').val(data[1]);
                $('#description').val(data[2]);
                $('#niveau_etude').val(data[3]);
                $('#annee_experience').val(data[4]);
                $('#domaines').val(data[5]);
            });
        });
    </script>
