    <!--Offre Modal-->
    <div class="modal fade" id="offreModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="offreModalLabel">Ajout Offre</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="{{ path('app_offre_new') }}" id="form1" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="titre" class="col-form-label">Titre:</label>
                            <input type="text" class="form-control" id="titre" name="titre">
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-form-label">Description:</label>
                            <textarea type="text" class="form-control" id="description" name="description"></textarea>
                        </div>
                        <div class="form-group field_wrapper">
                            <label for="niveau_etude" class="col-form-label-lg">Niveau d'Etude</label>
                            <select required class="selectpicker border rounded" id="niveau_etude" name="niveau_etude" data-style="btn-black" data-width="100%" data-live-search="true" title="Choisissez le niveau d'Etude recherché">
                                {% for n in niveau_etudes %}
                                    <option value="{{ n }}" selected>{{ n }}</option>
                                {% endfor%}
                            </select>
                        </div>
                        <div class="form-group field_wrapper">
                            <label for="annee_experience" class="col-form-label-lg">Année d'Expérience</label>
                            <select required class="selectpicker border rounded" id="annee_experience" name="annee_experience" data-style="btn-black" data-width="100%" data-live-search="true" title="Choisissez l'année d'Expérience recherchée">
                                {% for a in annee_experiences %}
                                    <option value="{{ a }}" selected>{{ a }}</option>
                                {% endfor%}
                            </select>
                        </div>
                        <div class="form-group field_wrapper">
                            <label for="domaines" class="col-form-label-lg">Domaines</label>
                            <select required class="selectpicker border rounded" id="domaines" name="domaines" data-style="btn-black" data-width="100%" data-live-search="true" title="Choisissez le Domaine recherché">
                                {% for d in domaines %}
                                    <option value="{{ d.id }}" selected>{{ d.libelle }}</option>
                                {% endfor%}
                            </select>
                        </div>
                    </div>
                    <input type="hidden" id="id" name="id" value="0">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button id="saveOffre" type="submit" class="btn btn-primary">Enregister</button>
                    </div>
                </form>
            </div>
